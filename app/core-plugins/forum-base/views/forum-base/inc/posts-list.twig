{% if posts is not empty %}

    {{ enable_html_hooks('posts_list') }}
    <div class="posts-list-container">
        <div class="posts-list">
            <div class="posts-list-desc list-desc">
                {{ nbPostsTotal }} posts - page {{ paginationData.currentPageNum }} -
                {{ posts|length }} posts on this page
            </div>
            {% for post in posts %}
                {% include 'forum-base/inc/post.twig' with {post: post, topic: topic} %}
            {% endfor %}
        </div>{# end .posts-list #}
    </div>{# end .posts-list-container #}

{% else %}
    <div class="empty-list-msg">
        {{ 'core-plugins.forum-base.posts-list.no-post'|trans }}
    </div>
{% endif %}
